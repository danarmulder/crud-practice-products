<h2>Create New Product</h2>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price %>
  <%= f.number_field :price %>

  <%= f.submit %>
  <%= link_to 'Cancel', products_path %>
<%end%>
